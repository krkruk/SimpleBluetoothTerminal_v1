<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.projektorion.krzysztof.btattempt3.fragments.DeviceListFragment"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_textview_paired_device"
    />
    <ListView
        android:id="@+id/listview_paired_devices"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scrollbars="vertical"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_textview_found_devices"
    />
    <ListView
        android:id="@+id/listview_found_devices"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scrollbars="vertical"
    />

    <Button
        android:id="@+id/button_scan_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_button_scan_bt"
    />

</LinearLayout>
